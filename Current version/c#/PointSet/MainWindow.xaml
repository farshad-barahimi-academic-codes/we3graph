<Window x:Class="PointSet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Point set embedding algorithms plugin" Height="550" Width="525" Loaded="Window_Loaded">
    <StackPanel VerticalAlignment="Center">
        <Label HorizontalAlignment="Center">Folder:</Label>
        <ListBox Name="FolderListBox" Width="250" 
                 Height="300" BorderBrush="Black"></ListBox>
        <Label/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Graph name:</Label>
            <TextBox Name="GraphNameTextBox" Width="200"></TextBox>
        </StackPanel>
        <Label/>
        <Button Name="FirstAlgorithmStartButton" Width="200" Height="50" Click="FirstAlgorithmStartButton_Click">Start first algorithm</Button>
        <Label/>
        <Button Name="SecondAlgorithmStartButton" Width="200" Height="50" Click="SecondAlgorithmStartButton_Click">Start second algorithm</Button>
    </StackPanel>
</Window>
